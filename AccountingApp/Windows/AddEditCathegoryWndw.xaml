<Window x:Class="AccountingApp.Windows.AddEditCathegoryWndw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingApp.Windows"
        mc:Ignorable="d"
        Title="Добавить категорию" Height="200" Width="430">
    <Grid>
        <TextBlock Text="Наименование"/>
        <TextBox x:Name="titleTextBx" Width="350" Height="30" Margin="30,20,20,80" Text="{Binding Path=Title}"/>
        <Button x:Name="okBtn" Content="Ok" Width="50" Height="30" Margin="25,70,325,10" Click="okBtn_Click"/>
        <Button x:Name="cancelBtn" Content="отмена" Width="50" Height="30" Margin="320,70,20,10" Click="cancelBtn_Click"/>
    </Grid>
</Window>
