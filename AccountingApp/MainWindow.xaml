<Window x:Class="AccountingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingApp"
        mc:Ignorable="d"
        Title="AccountingApp" Height="450" Width="800">
    <Grid>
        <Menu x:Name="mainMenu" Height="20" VerticalAlignment="Top">
            <MenuItem x:Name="catCostMi" Header="Категории затрат" Click="catCostMi_Click"></MenuItem>
            <MenuItem x:Name="costMi" Header="Расходы" Click="costMi_Click"></MenuItem>
            <MenuItem x:Name="statMi" Header="Статистика" Click="statMi_Click"></MenuItem>
        </Menu>
        <Frame x:Name="MainFrame" Margin="0,20,0,0"/>
    </Grid>
</Window>
