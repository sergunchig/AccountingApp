<Page x:Class="AccountingApp.Views.CostsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CostsPage">

    <Grid>
        <DataGrid x:Name="CatCostDg" AutoGenerateColumns="False" CanUserAddRows="False"
                  Width="800" HorizontalAlignment="Center" ItemsSource="{Binding Cathegories}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Path=Date}"
                                    Width="100"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Path=Cathegory}"
                                    Width="250"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Path=Price}"
                                    Width="100"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Path=Comment}"
                                    Width="500"/>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="addCatMn" Header="Добавить" Click="addCatMn_Click"/>
                    <MenuItem x:Name="EditCatMn" Header="Редактировать" Click="EditCatMn_Click"/>
                    <MenuItem x:Name="DelCatMn" Header="Удалить" Click="DelCatMn_Click"/>
                    <MenuItem x:Name="RefreshCatMn" Header="Обновить" Click="RefreshCatMn_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Page>
